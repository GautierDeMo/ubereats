generator client {
  provider    = "prisma-client"
  output      = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Restaurant {
  address           String
  createdAt         DateTime      @default(now())
  coverImages       String[]      @default([])
  email             String        @unique
  foodTypes         String[]
  id                String        @id @default(uuid())
  name              String
  ownerName         String
  password          String
  phone             String
  postalCode        String
  rating            Float         @default(0.0)
  salt              String
  serviceAvailable  Boolean       @default(false)
}
