{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // File Layout
    // "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings
    // See also https://aka.ms/tsconfig/module
    "module": "ESNext",
    "target": "ES2023",
    "moduleResolution": "node",
    "ignoreDeprecations": "6.0",
    "types": ["node"],
    // For nodejs:
    // "lib": ["esnext"],
    // "types": ["node"],
    // and npm install -D @types/node

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Style Options
    // "noImplicitReturns": true,
    // "noImplicitOverride": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "noFallthroughCasesInSwitch": true,
    // "noPropertyAccessFromIndexSignature": true,

    // Recommended Options
    "strict": true,
    // unused because no React, or Next.js
    // "jsx": "react-jsx",
    "verbatimModuleSyntax": false,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /** rapport aux classes au lieu des interfaces : vu qu'on ne définit pas les
      * les propriétés de cette classe autre part que dans le DTO et le schéma (
      * par ex avec un constructeur ou en le mettant 'undefined', donc pas obli-
      * gatoire, et bien il faut passer cette prop à 'false')
      */
    "strictPropertyInitialization": false,

    /** Mais comme on a besoin de faire des validations, on utilise les
      * décorateurs de prop dans une classe afin aussi de mettre des validations
      * à notre classe lors de sa construction/création
      */
    "experimentalDecorators": true
  },
}
